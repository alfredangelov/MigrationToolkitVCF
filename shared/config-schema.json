{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Migration Toolkit Configuration",
  "type": "object",
  "required": ["SourceVCenter", "TargetVCenter", "Folders"],
  "properties": {
    "DryRun": {
      "type": "boolean",
      "description": "Whether to run in dry-run mode"
    },
    "SourceVCenter": {
      "type": "object",
      "required": ["Server", "Datacenter", "CredentialProfile"],
      "properties": {
        "Server": {
          "type": "string",
          "format": "hostname",
          "description": "Source vCenter FQDN or IP"
        },
        "Datacenter": {
          "type": "string",
          "description": "Source datacenter name"
        },
        "CredentialProfile": {
          "type": "string",
          "description": "Secret vault credential reference"
        }
      }
    },
    "TargetVCenter": {
      "type": "object",
      "required": ["Server", "Datacenter", "CredentialProfile"],
      "properties": {
        "Server": {
          "type": "string",
          "format": "hostname",
          "description": "Target vCenter FQDN or IP"
        },
        "Datacenter": {
          "type": "string",
          "description": "Target datacenter name"
        },
        "CredentialProfile": {
          "type": "string",
          "description": "Secret vault credential reference"
        }
      }
    },
    "Folders": {
      "type": "object",
      "required": ["Root"],
      "properties": {
        "Root": {
          "type": "string",
          "description": "Root folder name to migrate"
        },
        "OutputJson": {
          "type": "string",
          "description": "Output JSON filename for folder structure"
        },
        "VMMappingJson": {
          "type": "string",
          "description": "VM mapping JSON filename"
        },
        "JsonDepth": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "JSON serialization depth limit"
        }
      }
    },
    "Metadata": {
      "type": "object",
      "properties": {
        "Author": {
          "type": "string",
          "description": "Migration author name"
        },
        "MigrationNote": {
          "type": "string",
          "description": "Migration description/notes"
        }
      }
    },
    "ToolkitVersion": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$",
      "description": "Toolkit version (YYYY.MM.DD format)"
    }
  }
}
